Good morning, <%= @user.name %>!
===================================
<% @newsletter.each do |topic| %>

  <%= topic[0] %>
-----------------------------------
  <% if topic[1].size == 0 %>
    No breaking news in this topic today!
  <% else %>
    <% topic[1].each do |article| %>
      <%= article.headline %>
        <% article.body.split("\n").map do |sentence| %>
            <% if sentence != "" && sentence.upcase != sentence %>
            - <%= sentence %>
            <% end %>
        <% end%>
    <% end %>
  <% end %>
<% end %>
